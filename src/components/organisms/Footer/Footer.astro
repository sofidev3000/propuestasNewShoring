          <input
            class="py-[10.2px] flex-1 text-xs"
            type="email"
            id="email"
            name="email"
            placeholder="Tu email"
            required
          />
          <Button
            text="Suscribirse"
            ID="send-btn"
            clase="self-start px-5 pt-[11px] pb-[12px] w-[300px]"
            rounded="rounded-r-lg"
            type="submit"
