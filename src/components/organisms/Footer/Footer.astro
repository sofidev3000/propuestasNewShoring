        method="POST"
        action="/"
        class="subscribe-form flex flex-col items-start justify-strech w-[80%] max-w-[1300px]"
      >
        <div class="flex flex-col items-center justify-center ga-10 w-full">
          <span class="text-sm text-red-600 hidden mb-2" id="email-error"
          ></span>
          <span class="text-sm text-red-600 hidden mb-2" id="terms-error"
          ></span>
        </div>

        <label class="flex text-sm text-left self-start text-white" for="email">
          Ingresa tu correo electrónico
        </label>

